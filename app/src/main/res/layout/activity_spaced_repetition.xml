<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.flashcard.SpacedRepetitionActivity"
    android:background="@color/background_gray"> <!-- Màu nền tổng thể -->

    <!-- Toolbar (tùy chọn, bạn có thể thêm nếu cần) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSpacedRepetition"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Tiến độ học và Ôn tập SRS" /> <!-- Tiêu đề -->

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/contentScrollView"
        app:layout_constraintTop_toBottomOf="@+id/toolbarSpacedRepetition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card: Memory Levels (Toàn cầu) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- TIÊU ĐỀ Memory Levels -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cấp độ ghi nhớ"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_marginBottom="16dp"/>

                    <!-- Memory Levels Bars (Simplified representation) -->
                    <!-- Rows for each level -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Example for Level 0 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 0 (Quên/Chưa nhớ):"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/textMemoryLevel0"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                tools:text="0 từ"/>
                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/bg_memory_level_0"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 1:"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/textMemoryLevel1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                tools:text="1 từ"/>
                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/bg_memory_level_1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 2:"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/textMemoryLevel2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                tools:text="1 từ"/>
                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/bg_memory_level_2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 3:"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/textMemoryLevel3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                tools:text="0 từ"/>
                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/bg_memory_level_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 4:"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/textMemoryLevel4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                tools:text="0 từ"/>
                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/bg_memory_level_4"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"> <!-- No bottom margin for the last item -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mastered (>= Level 5):"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/textMemoryLevelMastered"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                tools:text="0 từ"/>
                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/bg_memory_level_mastered"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: It's time to review (Toàn cầu) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Icon/Info -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_info"
                            android:layout_marginEnd="16dp"
                            app:tint="?attr/colorPrimary"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã đến hạn ôn tập"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textDueReviewCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="2 từ"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:textColor="@color/incorrect_red"/>

                        </LinearLayout>

                        <!-- Illustration -->
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_xml_quick_reference_all_24px" />

                    </LinearLayout>


                    <!-- Review Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonReviewNow"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ôn tập ngay"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>
    </ScrollView>

    <!-- Placeholder for loading -->
    <ProgressBar
        android:id="@+id/progressBarSRS"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>