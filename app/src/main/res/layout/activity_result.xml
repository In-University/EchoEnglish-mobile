<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/activity_result_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/activity_result_image_happy" /> <!-- Use happy/sad based on score -->

    <TextView
        android:id="@+id/activity_result_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="#DC3549"
        android:textStyle="bold"
        tools:text="Good job!" />

    <TextView
        android:id="@+id/activity_result_text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        tools:text="You have completed the test" />

    <!-- Score Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="22dp"
        android:background="@drawable/background_rounded_corner"
        android:backgroundTint="#F5F5F5"
        android:elevation="5dp"
        android:orientation="vertical">

        <!-- Optional Circular Progress -->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp">
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/score_progress_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:indicatorSize="100dp"
                app:trackColor="@color/gray"
                app:trackCornerRadius="20dp"
                app:trackThickness="8dp"
                tools:progress="80" />
            <TextView
                android:id="@+id/score_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="80%" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_result_text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="Result: 8/10"
            android:textSize="25sp"
            android:textColor="#DC3549"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_result_button_show_answers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/activity_result_button_show_answers"
                android:text="Show answers"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" /> <!-- Ensure drawable exists -->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_result_button_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/activity_result_button_continue"
                android:text="Finish"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" /> <!-- Ensure drawable exists -->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>