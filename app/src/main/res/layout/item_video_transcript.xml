<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#283593"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/transcript_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="So, SBAR is a way to organize your speech or your writing or your emails to make your message easier to understand."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#3949AB"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="00:32"
            android:textColor="#E3F2FD"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transcript_text" />

        <ImageButton
            android:id="@+id/btn_translate"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_alphabetically"
            app:layout_constraintBottom_toBottomOf="@id/timestamp"
            app:layout_constraintEnd_toStartOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="@id/timestamp"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#fff"
            android:src="@android:drawable/ic_media_play"
            app:layout_constraintBottom_toBottomOf="@id/timestamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/timestamp"
            app:tint="#FFFFFF" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>