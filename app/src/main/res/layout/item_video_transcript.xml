<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Time indicator -->
        <TextView
            android:id="@+id/txtTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0F4FF"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="01:23 - 01:30"
            android:textColor="#4285F4"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Current subtitle text -->
        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:text="This is the subtitle text that appears during this time range. It could be quite useful for language learning."
            android:textColor="#202124"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/btnBookmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTimestamp" />

        <!-- Translated text (optional) -->
        <TextView
            android:id="@+id/txtTranslation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-light"
            android:text="Đây là văn bản phụ đề xuất hiện trong khoảng thời gian này. Nó có thể rất hữu ích cho việc học ngôn ngữ."
            android:textColor="#5F6368"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@id/btnBookmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSubtitle" />

        <!-- Bookmark button -->
        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bookmark"
            android:src="@android:drawable/btn_star"
            app:tint="#DADCE0"
            app:layout_constraintBottom_toBottomOf="@id/txtSubtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtSubtitle" />

        <!-- Interactive learning tools container -->
        <LinearLayout
            android:id="@+id/learningToolsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtTranslation"
            tools:visibility="visible">

            <!-- Vocabulary highlights -->
            <LinearLayout
                android:id="@+id/vocabularyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F8FF"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Vocabulary"
                    android:textColor="#1A73E8"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Sample vocabulary item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="useful"
                        android:textColor="#202124"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="/'juːsfəl/"
                        android:textColor="#5F6368"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="(adj.) having a practical or beneficial use"
                        android:textColor="#5F6368"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- User notes section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FFF8E1"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Notes"
                    android:textColor="#F9A825"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtUserNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Pay attention to how they use 'useful for' in this context."
                    android:textColor="#5D4037"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/learningToolsContainer">

            <ImageButton
                android:id="@+id/btnRepeat"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Repeat"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_rotate"
                app:tint="#4285F4" />

            <ImageButton
                android:id="@+id/btnTranslate"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Translate"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_sort_alphabetically"
                app:tint="#4285F4" />

            <ImageButton
                android:id="@+id/btnAddNote"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add Note"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="#4285F4" />

            <ImageButton
                android:id="@+id/btnShowDetails"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Show Details"
                android:padding="8dp"
                android:src="@android:drawable/arrow_down_float"
                app:tint="#4285F4" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>