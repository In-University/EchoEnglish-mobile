<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/table_row">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_phoneme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/k/"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_play_phoneme"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Play phoneme"
            android:scaleType="centerInside"
            android:src="@drawable/ic_volume" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chính xác!"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/container_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_wrong_phoneme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/u/"
                android:textColor="#F44336"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_play_wrong_phoneme"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Play wrong phoneme"
                android:scaleType="centerInside"
                android:src="@drawable/ic_volume" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Đối với /j/ (y), lưỡi của bạn phải ở gần vòm miệng nhưng không đẩy quá cao. Nếu nó quá cao, bạn sẽ nhận được âm thanh ù ù, như /ʒ/ (zh) hoặc /dʒ/ (j)."
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</TableRow>