<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <!-- Header with modern blue design -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#1E40AF"
        android:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="Create New Post"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="39dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomSubmitContainer"
        android:layout_below="@id/headerLayout"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="28dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Optional topic container -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic (optional)"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter your topic here"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:padding="18dp"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Content container -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Post Content"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top|start"
                    android:hint="Write your post here"
                    android:inputType="textMultiLine"
                    android:minHeight="240dp"
                    android:padding="18dp"
                    android:scrollbars="vertical"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Enhanced attachment section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Attachments"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Improved attachment container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- Attachment display area -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:elevation="3dp">

                    <!-- Empty state (shows when no files are attached) -->
                    <LinearLayout
                        android:id="@+id/emptyAttachmentsState"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_attachment"
                            app:tint="#CBD5E1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="No files attached"
                            android:textColor="#64748B"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tap the button below to add files"
                            android:textColor="#94A3B8"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Grid layout for attached files -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAttachments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:padding="12dp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <!-- Attachment actions bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0E305B"
                    android:elevation="3dp"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Add file button -->
                    <LinearLayout
                        android:id="@+id/btnAddAttachment"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_rounded"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Add Files"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- File options -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal">

                        <!-- Camera button -->
                        <ImageButton
                            android:id="@+id/btnCamera"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/background_border_rounded"
                            android:contentDescription="Take photo"
                            android:padding="12dp"
                            android:src="@drawable/ic_camera"
                            app:tint="#2563EB" />

                        <!-- Gallery button -->
                        <ImageButton
                            android:id="@+id/btnGallery"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/background_border_rounded"
                            android:contentDescription="Browse gallery"
                            android:padding="12dp"
                            android:src="@drawable/ic_gallery"
                            app:tint="#2563EB" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- File preview container (visible when files are selected) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/filePreviewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <!-- File preview header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtAttachmentCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selected Files (0)"
                        android:textColor="#1E293B"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <!-- Individual file items will be generated here dynamically -->
                    <LinearLayout
                        android:id="@+id/fileItemsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Final spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Submit button container -->
    <LinearLayout
        android:id="@+id/bottomSubmitContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="15dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Modern submit button -->
        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#1E40AF"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Publish Post"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>